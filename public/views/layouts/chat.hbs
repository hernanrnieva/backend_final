<!DOCTYPE html>
<html lang="en">
{{> header-chat}}
<body class="bg-dark">
    <div class="container mt-3">
        <h2 class="p-3 mb-3 bg-secondary">Send a new message</h2>
        <form class="mt-3">
            <input required type="text" id="email" placeholder="Email"><br><br>
            <input required type="text" id="text" placeholder="Message"><br><br>
            <button class="btn btn-success mt-2 mb-2" type="button" onclick="createMessage()">Submit</button>
        </form>
    </div>
    {{> chatbox}}
    <script src="./js/messages.js"></script>
</body>
{{> footer}}